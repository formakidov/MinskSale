<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.ilavista.minsksale.SingleFragment"
    android:background="@color/colorPrimaryLight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/singleFragmentLayout"
        android:paddingBottom="10sp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/singleFragmentImage"
            android:adjustViewBounds="true"
            android:background="@color/colorPrimary"
            android:paddingTop="3dp"
            android:paddingBottom="3dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/single_fragment_button_add"
            android:layout_toStartOf="@+id/single_fragment_button_add"
            android:layout_alignParentTop="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/singleFragmentTextName"
                android:textColor="@color/colorPrimaryText"
                android:text="Name"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center_horizontal"
                android:paddingTop="15dp"
                android:paddingBottom="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/singleFragmentTextOrganizer"
                android:text="Organizer"
                android:textColor="@color/colorAccent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center_horizontal"
                android:paddingBottom="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/singleFragmentTextLocation"
                android:text="Location"
                android:gravity="center_horizontal"
                android:layout_marginBottom="10dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/my_layout_all"
                    android:id="@+id/layout_add_to_subscribtions">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView"
                        android:src="@drawable/ic_done_black_24dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="подписаться на Organizer"
                        android:textColor="@color/colorPrimaryText"
                        android:id="@+id/textViewOrganizer"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:gravity="center"
                        android:layout_weight="15" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/my_layout_no_left"
                    android:id="@+id/layout_add_to_favorite">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="добавить в закладки"
                        android:id="@+id/textAddToFavorite"
                        android:paddingLeft="5dp"
                        android:textColor="@color/colorPrimaryText"
                        android:paddingRight="5dp"
                        android:gravity="center"
                        android:layout_weight="15" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView2"
                        android:src="@drawable/ic_favorite_border_black_24dp"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/singleFragmentTextDate"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:text="Date"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/singleFragmentTextDescription"
            android:text="Description"
            android:textColor="@color/colorPrimaryText"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/my_layout_all"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>


    </LinearLayout>
</ScrollView>
